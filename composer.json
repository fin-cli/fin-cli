{
    "name": "fp-cli/fp-cli",
    "description": "FP-CLI framework",
    "keywords": [
        "cli",
        "finpress"
    ],
    "homepage": "https://fp-cli.org",
    "license": "MIT",
    "require": {
        "php": ">=7.2.24 || ^8.0",
        "ext-curl": "*",
        "mustache/mustache": "^3.0.0",
        "symfony/finder": ">2.7",
        "fp-cli/mustangostang-spyc": "^0.6.3",
        "fp-cli/php-cli-tools": "~0.12.4"
    },
    "require-dev": {
        "justinrainbow/json-schema": "^6.3",
        "roave/security-advisories": "dev-latest",
        "fp-cli/db-command": "^1.3 || ^2",
        "fp-cli/entity-command": "^1.2 || ^2",
        "fp-cli/extension-command": "^1.1 || ^2",
        "fp-cli/package-command": "^1 || ^2",
        "fp-cli/fp-cli-tests": "^4"
    },
    "suggest": {
        "ext-readline": "Include for a better --prompt implementation",
        "ext-zip": "Needed to support extraction of ZIP archives when doing downloads or updates"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "johnpbloch/finpress-core-installer": true,
            "phpstan/extension-installer": true
        },
        "process-timeout": 7200,
        "sort-packages": true,
        "lock": false
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.13.x-dev"
        }
    },
    "autoload": {
        "psr-0": {
            "FP_CLI\\": "php/"
        },
        "classmap": [
            "php/class-fp-cli.php",
            "php/class-fp-cli-command.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/fp",
        "bin/fp.bat"
    ],
    "scripts": {
        "behat": "run-behat-tests",
        "behat-rerun": "rerun-behat-tests",
        "lint": "run-linter-tests",
        "phpcs": "run-phpcs-tests",
        "phpcbf": "run-phpcbf-cleanup",
        "phpstan": "run-phpstan-tests",
        "phpunit": "run-php-unit-tests",
        "prepare-tests": "install-package-tests",
        "test": [
            "@lint",
            "@phpcs",
            "@phpstan",
            "@phpunit",
            "@behat"
        ]
    },
    "support": {
        "issues": "https://github.com/fp-cli/fp-cli/issues",
        "source": "https://github.com/fp-cli/fp-cli",
        "docs": "https://make.finpress.org/cli/handbook/"
    }
}
